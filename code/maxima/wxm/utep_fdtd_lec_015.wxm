simp:false;
/* [wxMaxima: input   end   ] */


/* [wxMaxima: input   start ] */
cxe_sf_01: C_x_E[i,j_src-1,t] =  (En_z[i,j_src,t] - En_z[i,j_src-1,t])/dy;
